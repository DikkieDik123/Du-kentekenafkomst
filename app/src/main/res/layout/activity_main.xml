<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
>
    <EditText
            android:layout_width="252dp"
            android:layout_height="63dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/PlateTxt"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Duits kenteken" android:textAlignment="center"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/Title" android:maxLength="3"
            app:layout_constraintHorizontal_bias="0.496" android:textSize="24sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StartBtn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/PlateTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:text="zoek"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultTextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/StartBtn"
            android:textIsSelectable="false" android:textAlignment="center" app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="80dp" app:autoSizeMinTextSize="20dp"/>
    <TextView
            android:text="Uit welke regio komt het kenteken?"
            android:layout_width="286dp"
            android:layout_height="137dp"
            android:id="@+id/Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:textAlignment="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="135dp"
                                                android:orientation="horizontal"
                                                app:layout_constraintTop_toTopOf="parent"
                                                android:layout_marginTop="135dp"/>
    <TextView
            android:text="Gemaakt door Dick Stuut."
            android:layout_width="199dp"
            android:layout_height="27dp" tools:layout_editor_absoluteY="688dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView3"/>
</androidx.constraintlayout.widget.ConstraintLayout>